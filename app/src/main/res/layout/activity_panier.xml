<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Panier"
    android:orientation="vertical">

    <Button
        android:id="@+id/panier_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="profil" />
    <Button
        android:id="@+id/panier_panier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="panier"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Panier_titre"/>

    <ScrollView
        android:id="@+id/panier_articles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="art1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="art2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="art3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="art4"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/panier_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Panier_cancel" />
    <Button
        android:id="@+id/panier_validate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

</LinearLayout>