<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Panier">

    <TableRow>
        <Button
            android:id="@+id/panier_profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="profil"
            android:layout_column="3"/>
        <Button
            android:id="@+id/panier_panier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="panier"
            android:layout_column="4"/>
    </TableRow>


    <TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Panier_titre"
        android:layout_column="1"/>
    </TableRow>

    <ScrollView
        android:id="@+id/panier_articles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="art1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="art2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="art3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="art4"/>

        </LinearLayout>
    </ScrollView>

    <TableRow>
        <Button
            android:id="@+id/panier_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Panier_cancel"
            android:layout_column="2"/>
        <Button
            android:id="@+id/panier_validate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_column="3"/>
    </TableRow>

</TableLayout>