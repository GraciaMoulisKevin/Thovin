<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.AuthFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/fg_auth_Logo"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginTop="@dimen/high_spacing"
            android:contentDescription="Application Logo"
            android:src="@drawable/app_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fg_auth_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="114dp"
            android:layout_marginLeft="114dp"
            android:layout_marginTop="@dimen/high_spacing"
            android:layout_marginEnd="114dp"
            android:layout_marginRight="114dp"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textSize="38sp"
            android:textColor="@color/orange_500"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fg_auth_Logo" />

        <TextView
            android:id="@+id/fg_auth_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/high_spacing"
            android:layout_marginLeft="@dimen/high_spacing"
            android:layout_marginTop="@dimen/high_spacing"
            android:layout_marginEnd="@dimen/high_spacing"
            android:layout_marginRight="@dimen/high_spacing"
            android:text="@string/auth_header"
            android:textSize="26sp"
            android:textColor="@color/gray_900"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fg_auth_app_name" />

        <Button
            android:id="@+id/nav_to_client_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="159dp"
            android:layout_marginLeft="159dp"
            android:layout_marginTop="@dimen/high_spacing"
            android:layout_marginEnd="159dp"
            android:layout_marginRight="159dp"
            android:text="@string/auth_client_btn"
            android:backgroundTint="@color/orange_500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fg_auth_text" />

        <Button
            android:id="@+id/nav_to_deliverer_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="159dp"
            android:layout_marginLeft="159dp"
            android:layout_marginTop="@dimen/high_spacing"
            android:layout_marginEnd="159dp"
            android:layout_marginRight="159dp"
            android:text="@string/auth_deliverer_btn"
            android:backgroundTint="@color/orange_500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nav_to_client_connection" />

        <Button
            android:id="@+id/nav_to_restaurant_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="159dp"
            android:layout_marginLeft="159dp"
            android:layout_marginTop="@dimen/high_spacing"
            android:layout_marginEnd="159dp"
            android:layout_marginRight="159dp"
            android:text="@string/auth_restaurant_btn"
            android:backgroundTint="@color/orange_500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nav_to_deliverer_connection" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>