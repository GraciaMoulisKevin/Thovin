<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilActivity">

    <Button
        android:id="@+id/profil_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="profil"
        android:layout_alignParentRight="true" />
    <Button
        android:id="@+id/profil_panier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="panier"
        android:layout_toLeftOf="@+id/profil_close"/>


    <Button
        android:id="@+id/profil_editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT"
        android:layout_below="@id/profil_panier"
        android:layout_toLeftOf="@id/profil_panier"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_profil_user_name"
        android:layout_below="@+id/profil_editButton"/>
    <TextView
        android:id="@+id/profil_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/profil_editButton"
        android:layout_toRightOf="@id/profil_editButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_profil_user_first_name"
        android:layout_below="@+id/profil_nom"/>
    <TextView
        android:id="@+id/profil_prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/profil_nom"
        android:layout_toRightOf="@id/profil_editButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_profil_user_mail"
        android:layout_below="@+id/profil_prenom"/>
    <TextView
        android:id="@+id/profil_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/profil_prenom"
        android:layout_toRightOf="@id/profil_editButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_profil_user_address"
        android:layout_below="@+id/profil_email" />
    <TextView
        android:id="@+id/profil_adresse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/profil_email"
        android:layout_toRightOf="@id/profil_editButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_profil_user_additionnal_address"
        android:layout_below="@+id/profil_adresse"/>
    <TextView
        android:id="@+id/profil_compAdresse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/profil_adresse"
        android:layout_toRightOf="@id/profil_editButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_profil_city"
        android:layout_below="@+id/profil_compAdresse" />
    <TextView
        android:id="@+id/profil_ville"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/profil_compAdresse"
        android:layout_toRightOf="@id/profil_editButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_profil_postal_code"
        android:layout_below="@+id/profil_ville"/>
    <TextView
        android:id="@+id/profil_codePostal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/profil_ville"
        android:layout_toRightOf="@id/profil_editButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_profil_user_phone"
        android:layout_below="@+id/profil_codePostal"/>
    <TextView
        android:id="@+id/profil_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/profil_codePostal"
        android:layout_toRightOf="@id/profil_editButton"/>


</RelativeLayout>