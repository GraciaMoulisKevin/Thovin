<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adapter_history_container"
    style="@style/Widget.App.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/medium_spacing"
    android:clickable="true"
    android:focusable="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium_spacing"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_spacing"
            android:drawablePadding="@dimen/small_spacing"
            android:text="@string/status"
            app:drawableStartCompat="@drawable/ic_baseline_brightness_1_24"
            app:drawableTint="@color/gray_500"
            android:background="@drawable/round_rectangle_white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_spacing"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/client_full_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:drawablePadding="@dimen/small_spacing"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/name"
                app:drawableStartCompat="@drawable/ic_round_person_24"
                app:drawableTint="@color/orange_500" />

            <TextView
                android:id="@+id/client_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="8dp"
                android:text="@string/phone"
                android:textAlignment="textEnd" />
        </LinearLayout>

        <TextView
            android:id="@+id/client_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/small_spacing"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/address" />

        <View
            android:layout_width="50dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/small_spacing"
            android:background="@drawable/spinner_bg_circle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_spacing"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/restaurant_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:drawablePadding="@dimen/small_spacing"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/name"
                app:drawableStartCompat="@drawable/ic_round_store_24"
                app:drawableTint="@color/orange_500" />

            <TextView
                android:id="@+id/restaurant_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="8dp"
                android:text="@string/phone"
                android:textAlignment="textEnd" />
        </LinearLayout>

        <TextView
            android:id="@+id/restaurant_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/small_spacing"
            android:layout_marginBottom="@dimen/small_spacing"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/address" />

        <View
            android:layout_width="50dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/small_spacing"
            android:background="@drawable/spinner_bg_circle" />

        <TextView
            android:id="@+id/cart_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_spacing"
            android:drawablePadding="@dimen/small_spacing"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/cart"
            app:drawableStartCompat="@drawable/ic_outline_shopping_bag_24"
            app:drawableTint="@color/orange_500" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/small_spacing"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/menus1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Menus"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/menus2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Menus"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>